# FinCore - Configuracion de Entorno
# Copiar a .env y configurar valores

# Application
APP_NAME="FinCore - Sistema Financiero"
DEBUG=true

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=finance_system
DB_USER=postgres
DB_PASSWORD=tu_password_aqui

# Redis (Sessions & Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Security
JWT_SECRET_KEY=genera_una_clave_secreta_de_32_caracteres
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# MFA
MFA_ISSUER_NAME=FinCore
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Encryption (AES-256)
ENCRYPTION_KEY=genera_otra_clave_secreta_de_32_caracteres

# AWS S3 (Document Vault)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=fincore-vault

# Tax API Integration
TAX_API_URL=
TAX_API_KEY=

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
